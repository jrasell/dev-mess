data_dir   = "{{ nomad_data_dir }}"
bind_addr  = "{{ ansible_facts["default_ipv4"]["address"] }}"
region     = "lcy1"

log_level            = "DEBUG"
log_include_location = true
log_file             = "/var/log/nomad-server.log"
enable_debug         = true

telemetry {
  publish_allocation_metrics = true
  publish_node_metrics       = true
}

server {
  enabled          = true
  bootstrap_expect = "{{ groups['nomad']|length }}"

  server_join {
    retry_join = [
      {% for host in groups['nomad'] %}
      "{{ hostvars[host]['ansible_facts']["default_ipv4"]["address"] }}",
      {% endfor %}
    ]
  }
}

acl {
  enabled = true
}

ui {
  enabled = true

  label {
    text             = "local lcy1"
    background_color = "purple"
    text_color       = "#FFFFFF"
  }
}
